{
  "name": "stackhack_2.0",
  "version": "1.0.0",
  "description": "HR managment studio",
  "main": "server.main.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.main.js",
    "server": "nodemon server.main.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "test-server": "jest",
    "test-client": "npm test --prefix client",
    "test-all": "concurrently \"npm run test-server\" \"npm run test-client \""
  },
  "author": "bm_mayur",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.8",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "jest": "^26.6.0",
    "supertest": "^6.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "/client/"
    ]
  }
}
